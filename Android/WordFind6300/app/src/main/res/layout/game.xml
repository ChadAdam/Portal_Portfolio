<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityGame">

    <Button
        android:id="@+id/buttonPlayGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:text="@string/buttonPlayGame"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonGameHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:text="@string/buttonGameStatistics"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonWordCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:text="@string/buttonWordStatistics"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonGameSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:text="@string/buttonGameSettings"
        android:textSize="36sp" />

</LinearLayout>